# Fetch secrets from LastPass
SECRETS=$(kamal secrets fetch --adapter lastpass --account vlad@mehakovic.com --from mbuzz MBUZZ_KAMAL_REGISTRY_PASSWORD MBUZZ_RAILS_MASTER_KEY MBUZZ_DB_URL)

# Set the secrets as environment variables
KAMAL_REGISTRY_PASSWORD=$(kamal secrets extract mbuzz/MBUZZ_KAMAL_REGISTRY_PASSWORD "\"${SECRETS}\"")
RAILS_MASTER_KEY=$(kamal secrets extract mbuzz/MBUZZ_RAILS_MASTER_KEY "\"${SECRETS}\"")
DATABASE_URL=$(kamal secrets extract mbuzz/MBUZZ_DB_URL "\"${SECRETS}\"")
