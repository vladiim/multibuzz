# Fetch secrets from LastPass
SECRETS=$(kamal secrets fetch --adapter lastpass --account vlad@mehakovic.com --from mbuzz MBUZZ_KAMAL_REGISTRY_PASSWORD MBUZZ_RAILS_MASTER_KEY MBUZZ_POSTGRES_PASSWORD)

# Set the secrets as environment variables
KAMAL_REGISTRY_PASSWORD=$(kamal secrets extract mbuzz/MBUZZ_KAMAL_REGISTRY_PASSWORD "\"${SECRETS}\"")
RAILS_MASTER_KEY=$(kamal secrets extract mbuzz/MBUZZ_RAILS_MASTER_KEY "\"${SECRETS}\"")
POSTGRES_PASSWORD=$(kamal secrets extract mbuzz/MBUZZ_POSTGRES_PASSWORD "\"${SECRETS}\"")
