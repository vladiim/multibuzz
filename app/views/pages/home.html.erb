<div class="min-h-screen bg-white">
  <!-- Navigation -->
  <nav class="bg-white border-b border-gray-200" data-controller="toggle">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <div class="flex items-center gap-4">
          <div class="p-1.5">
            <svg width="24" height="24" viewBox="0 0 963 963" fill="none" xmlns="http://www.w3.org/2000/svg" style="display: block;">
              <path d="M60.2819 352C36.0202 352 14.0154 362.255 4.6117 378.033C-4.79205 393.811 0.474051 411.823 17.7769 423.788L361.202 664.001V814.809C361.202 825.984 367.596 836.634 378.881 844.523L499.249 928.67C516.552 940.766 542.318 944.316 564.887 937.742C587.456 931.168 601.938 915.917 601.938 898.956V664.001L945.363 423.919C962.666 411.823 967.744 393.811 958.34 378.033C948.936 362.255 927.12 352 902.858 352H60.2819Z" fill="#1F2937"/>
              <rect x="57" y="120" width="199" height="210" rx="6" fill="#6366F1"/>
              <rect x="290" y="49" width="177" height="153" rx="8" fill="#EC4899"/>
              <rect x="501" y="3" width="175" height="273" rx="8" fill="#10B981"/>
              <rect x="710" y="172" width="207" height="158" rx="6" fill="#F59E0B"/>
            </svg>
          </div>
          <h1 class="text-2xl font-semibold text-gray-900">
            <%= t('pages.home.nav.brand') %>
          </h1>
        </div>

        <!-- Desktop Navigation -->
        <div class="hidden md:flex items-center gap-8">
          <a href="#features" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">
            <%= t('pages.home.nav.features') %>
          </a>
          <%= link_to t('pages.home.nav.docs'), docs_path('getting-started'), class: "text-sm text-gray-600 hover:text-gray-900 transition-colors" %>
          <%= link_to t('pages.home.nav.login'), login_path, class: "text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors" %>
          <%= link_to t('pages.home.nav.cta'), new_waitlist_path, class: "text-sm font-medium text-white bg-blue-600 hover:bg-blue-500 px-4 py-2 rounded-md transition-all" %>
        </div>

        <!-- Mobile Navigation -->
        <div class="flex md:hidden items-center gap-4">
          <%= link_to t('pages.home.nav.login'), login_path, class: "text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors" %>
          <%= link_to t('pages.home.nav.cta'), new_waitlist_path, class: "text-sm font-medium text-white bg-blue-600 hover:bg-blue-500 px-4 py-2 rounded-md transition-all" %>
          <button type="button" data-action="click->toggle#toggle" class="text-gray-600 hover:text-gray-900">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
          </button>
        </div>
      </div>

      <!-- Mobile Menu -->
      <div data-toggle-target="content" class="hidden md:hidden border-t border-gray-200 py-4">
        <div class="space-y-2">
          <a href="#features" class="block px-4 py-2 text-sm text-gray-600 hover:text-gray-900 hover:bg-gray-50 rounded-md transition-colors">
            <%= t('pages.home.nav.features') %>
          </a>
          <%= link_to t('pages.home.nav.docs'), docs_path('getting-started'), class: "block px-4 py-2 text-sm text-gray-600 hover:text-gray-900 hover:bg-gray-50 rounded-md transition-colors" %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="py-24 px-6 bg-pattern-dots">
    <div class="max-w-7xl mx-auto text-center">
      <h1 class="text-6xl font-bold text-gray-900 tracking-tight scroll-animate" data-controller="scroll-reveal">
        <%= t('pages.home.hero.title') %>
      </h1>
      <p class="mt-6 text-xl text-gray-600 max-w-3xl mx-auto scroll-animate" data-controller="scroll-reveal">
        <%= t('pages.home.hero.subtitle') %>
      </p>
      <div class="mt-10 flex justify-center gap-4 scroll-animate" data-controller="scroll-reveal">
        <%= link_to t('pages.home.hero.cta_primary'), new_waitlist_path, class: "px-6 py-3 text-sm font-semibold text-white bg-blue-600 hover:bg-blue-500 rounded-md transition-all" %>
        <%= link_to t('pages.home.hero.cta_secondary'), docs_path('getting-started'), class: "px-6 py-3 text-sm font-semibold text-gray-900 bg-white border border-gray-200 hover:border-gray-300 hover:bg-gray-50 rounded-md transition-all" %>
      </div>
    </div>
  </section>

  <!-- Attribution Flow Visualization -->
  <section class="py-24 px-6 bg-gray-50 bg-pattern-grid">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-3xl font-bold text-gray-900 text-center mb-16">
        <%= t('pages.home.attribution_flow.title') %>
      </h2>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 items-center">
        <!-- Channel Sources -->
        <div class="space-y-4">
          <div class="card card--channel card--interactive scroll-animate" data-controller="scroll-reveal">
            <div class="icon-circle bg-red-500 text-white">G</div>
            <span class="text-sm font-medium text-gray-900"><%= t('pages.home.attribution_flow.channels.google') %></span>
            <div class="ml-auto">
              <div class="flow-line" data-delay="0"></div>
            </div>
          </div>

          <div class="card card--channel card--interactive scroll-animate" data-controller="scroll-reveal">
            <div class="icon-circle bg-blue-600 text-white">f</div>
            <span class="text-sm font-medium text-gray-900"><%= t('pages.home.attribution_flow.channels.facebook') %></span>
            <div class="ml-auto">
              <div class="flow-line" data-delay="200"></div>
            </div>
          </div>

          <div class="card card--channel card--interactive scroll-animate" data-controller="scroll-reveal">
            <div class="icon-circle bg-blue-700 text-white text-xs">in</div>
            <span class="text-sm font-medium text-gray-900"><%= t('pages.home.attribution_flow.channels.linkedin') %></span>
            <div class="ml-auto">
              <div class="flow-line" data-delay="400"></div>
            </div>
          </div>

          <div class="card card--channel card--interactive scroll-animate" data-controller="scroll-reveal">
            <div class="icon-circle bg-green-600 text-white">@</div>
            <span class="text-sm font-medium text-gray-900"><%= t('pages.home.attribution_flow.channels.email') %></span>
            <div class="ml-auto">
              <div class="flow-line" data-delay="600"></div>
            </div>
          </div>

          <div class="card card--channel card--interactive scroll-animate" data-controller="scroll-reveal">
            <div class="icon-circle bg-purple-600 text-white">â†—</div>
            <span class="text-sm font-medium text-gray-900"><%= t('pages.home.attribution_flow.channels.direct') %></span>
            <div class="ml-auto">
              <div class="flow-line" data-delay="800"></div>
            </div>
          </div>
        </div>

        <!-- Center Hub -->
        <div class="flex justify-center">
          <div class="text-center scroll-animate" data-controller="scroll-reveal">
            <div class="icon-hub bg-blue-600 text-white animate-pulse-slow mx-auto">
              <span><%= t('pages.home.attribution_flow.hub') %></span>
            </div>
            <p class="mt-4 text-sm font-medium text-gray-600"><%= t('pages.home.attribution_flow.output') %></p>
          </div>
        </div>

        <!-- Output Metrics -->
        <div class="space-y-4">
          <div class="card card--metric scroll-animate" data-controller="scroll-reveal">
            <div class="card__metric-value">87%</div>
            <div class="card__metric-label">Attribution Accuracy</div>
          </div>

          <div class="card card--metric scroll-animate" data-controller="scroll-reveal">
            <div class="card__metric-value">5.2x</div>
            <div class="card__metric-label">ROI Improvement</div>
          </div>

          <div class="card card--metric scroll-animate" data-controller="scroll-reveal">
            <div class="card__metric-value">12</div>
            <div class="card__metric-label">Avg Touchpoints</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="py-24 px-6">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900">
          <%= t('pages.home.features.title') %>
        </h2>
        <p class="mt-4 text-xl text-gray-600">
          <%= t('pages.home.features.subtitle') %>
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Feature 1: Server-Side Privacy Tracking -->
        <div class="feature scroll-animate" data-controller="scroll-reveal">
          <div class="feature__icon">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
          </div>
          <h3 class="feature__title">
            <%= t('pages.home.features.privacy_tracking.title') %>
          </h3>
          <p class="feature__description">
            <%= t('pages.home.features.privacy_tracking.description') %>
          </p>
        </div>

        <!-- Feature 2: Dark Funnel Attribution -->
        <div class="feature scroll-animate" data-controller="scroll-reveal">
          <div class="feature__icon">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
            </svg>
          </div>
          <h3 class="feature__title">
            <%= t('pages.home.features.dark_funnel.title') %>
          </h3>
          <p class="feature__description">
            <%= t('pages.home.features.dark_funnel.description') %>
          </p>
        </div>

        <!-- Feature 3: Quick Setup -->
        <div class="feature scroll-animate" data-controller="scroll-reveal">
          <div class="feature__icon">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <h3 class="feature__title">
            <%= t('pages.home.features.quick_setup.title') %>
          </h3>
          <p class="feature__description">
            <%= t('pages.home.features.quick_setup.description') %>
          </p>
        </div>

        <!-- Feature 4: Hash-Based User ID Mapping -->
        <div class="feature scroll-animate" data-controller="scroll-reveal">
          <div class="feature__icon">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="feature__title">
            <%= t('pages.home.features.user_mapping.title') %>
          </h3>
          <p class="feature__description">
            <%= t('pages.home.features.user_mapping.description') %>
          </p>
        </div>

        <!-- Feature 5: Multiple Attribution Models -->
        <div class="feature scroll-animate" data-controller="scroll-reveal">
          <div class="feature__icon">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <h3 class="feature__title">
            <%= t('pages.home.features.custom_models.title') %>
          </h3>
          <p class="feature__description">
            <%= t('pages.home.features.custom_models.description') %>
          </p>
        </div>

        <!-- Feature 6: Seamless ETL Exports -->
        <div class="feature scroll-animate" data-controller="scroll-reveal">
          <div class="feature__icon">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
            </svg>
          </div>
          <h3 class="feature__title">
            <%= t('pages.home.features.etl_exports.title') %>
          </h3>
          <p class="feature__description">
            <%= t('pages.home.features.etl_exports.description') %>
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 px-6 bg-gray-900">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-4xl font-bold text-white">
        <%= t('pages.home.cta.title') %>
      </h2>
      <p class="mt-4 text-xl text-gray-400">
        <%= t('pages.home.cta.subtitle') %>
      </p>
      <div class="mt-10">
        <%= link_to t('pages.home.cta.button'), new_waitlist_path, class: "px-8 py-3 text-base font-semibold text-gray-900 bg-white hover:bg-gray-100 rounded-md transition-all inline-block" %>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-white border-t border-gray-200">
    <div class="max-w-7xl mx-auto px-6 py-12">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">
            <%= t('pages.home.footer.brand') %>
          </h3>
          <p class="text-sm text-gray-600">
            <%= t('pages.home.footer.tagline') %>
          </p>
        </div>

        <div>
          <h4 class="text-xs font-semibold text-gray-900 uppercase tracking-wider mb-4">
            <%= t('pages.home.footer.product') %>
          </h4>
          <ul class="space-y-2">
            <li><a href="#features" class="text-sm text-gray-600 hover:text-gray-900"><%= t('pages.home.footer.product_features') %></a></li>
            <li><%= link_to t('pages.home.footer.product_docs'), docs_path('getting-started'), class: "text-sm text-gray-600 hover:text-gray-900" %></li>
          </ul>
        </div>

        <div>
          <h4 class="text-xs font-semibold text-gray-900 uppercase tracking-wider mb-4">
            <%= t('pages.home.footer.company') %>
          </h4>
          <ul class="space-y-2">
            <li><a href="#" class="text-sm text-gray-600 hover:text-gray-900"><%= t('pages.home.footer.company_about') %></a></li>
            <li><a href="#" class="text-sm text-gray-600 hover:text-gray-900"><%= t('pages.home.footer.company_blog') %></a></li>
            <li><a href="#" class="text-sm text-gray-600 hover:text-gray-900"><%= t('pages.home.footer.company_contact') %></a></li>
          </ul>
        </div>

        <div>
          <h4 class="text-xs font-semibold text-gray-900 uppercase tracking-wider mb-4">
            <%= t('pages.home.footer.legal') %>
          </h4>
          <ul class="space-y-2">
            <li><a href="#" class="text-sm text-gray-600 hover:text-gray-900"><%= t('pages.home.footer.legal_privacy') %></a></li>
            <li><a href="#" class="text-sm text-gray-600 hover:text-gray-900"><%= t('pages.home.footer.legal_terms') %></a></li>
          </ul>
        </div>
      </div>

      <div class="mt-8 pt-8 border-t border-gray-200">
        <p class="text-sm text-gray-500 text-center">
          <%= t('pages.home.footer.copyright', year: Time.current.year) %>
        </p>
      </div>
    </div>
  </footer>
</div>
